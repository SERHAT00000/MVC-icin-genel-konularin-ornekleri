@{
    List<string> Kategoriler = new List<string>
    {
        
    "Bilgisayar","Klavye","Monitör","Mause","Kulaklık","Hoperlör"};
}

<ul class="list-group">
    
    @foreach(var item in Kategoriler)
    {
        <li class="list-group-item">
            <a href="/Home/Index?Kategori=@item">@item</a>
        </li>
    }

</ul>
